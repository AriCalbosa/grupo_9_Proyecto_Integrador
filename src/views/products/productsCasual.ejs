<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <link href="/css/main/styles-home.css" rel="stylesheet">
        <title>Casual</title>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <section class="casual">
                <h3>Casual</h3>
                <div class="productos">
                    <% for ( i = 0; i < products.length; i++) { %>

                            <article>
                                <a href="/productos/<%= products[i].category %>/<%= products[i].id %>">
                                    <img src = "/images/adidas/<%= products[i].image %>" alt="<%=products[i].product_name %>" class="product_img">
                                    <div class="producto">
                                        <i class="fas fa-truck"></i>
                                        <p class = "precio">$ <%=products[i].price %></p>
                                        <% if (products[i].discount != 0) { %>
                                        <p class = "descuento">%<%=products[i].discount %> OFF</p>
                                        <% } %>
                                        <h4 class = "descripcion"><%=products[i].product_name %></h4>
                                    </div>
                                </a>
                                </article>
                    <% } %>
                </div>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>