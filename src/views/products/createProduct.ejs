<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link href="/css/products/styles-productNew.css" rel="stylesheet">
    <title>Crear Producto</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <h3>Crear Producto</h3>
        <form action="/productos" method="POST" class="detalle-producto" enctype="multipart/form-data">
            <div class="producto-principal">
                <div class="imagen-producto-color01">
                    <input type="file" name="image" id="image" accept=".png, .jpg, .webp"  required/>
                    <!-- <label for="image"><i class="fas fa-upload"></i> Imagen</label> -->
                </div>
            </div>
            <div class="descripcion-producto">
                <div class="nombre-producto">
                    <input type="text" name="product_name" id="product_name" placeholder="Nombre del producto" class="<%= locals.errors && errors.product_name ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.product_name : null %>" >
                    <% if (locals.errors && errors.product_name) { %>
                        <div class="text-danger">
                            <%= errors.product_name.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="precio-producto">
                    <input type="text" name="price" id="price" placeholder="Precio del producto $"  class="<%= locals.errors && errors.price ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.price : null %>" >
                    <% if (locals.errors && errors.price) { %>
                        <div class="text-danger">
                            <%= errors.price.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="descuento-producto">
                    <input type="text" name="discount" id="discount" placeholder="Descuento del producto %"  class="<%= locals.errors && errors.discount ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.discount : null %>">
                    <% if (locals.errors && errors.discount) { %>
                        <div class="text-danger">
                            <%= errors.discount.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="caracteristicas-producto">
                    <div class="categoria">
                        <label for="category">Categor√≠a: </label>
                        <select name="category" id="category"  class="<%= locals.errors && errors.category ? 'is-invalid' : null %>" >
                            <option value=""></option>
                           <option value="casual">Casual</option>
                           <option value="futbol">Futbol</option>
                           <option value="running">Running</option>
                        </select>
                        <% if (locals.errors && errors.category) { %>
                            <div class="text-danger">
                                <%= errors.category.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <div class="cantidad-colores">
                        <label for="color"> Color: </label>
                        <select name="color" id="color"  class="<%= locals.errors && errors.color ? 'is-invalid' : null %>">
                            <option value=""></option>
                           <option value="Rojo">Rojo</option>
                           <option value="Negro">Negro</option>
                           <option value="Blanco">Blanco</option>
                           <option value="Azul">Azul</option>
                           <option value="Verde">Verde</option>
                           <option value="Violeta">Violeta</option>
                           <option value="Naranja">Naranja</option>
                           <option value="Otro">Otro</option>
                        </select>
                        <% if (locals.errors && errors.color) { %>
                            <div class="text-danger">
                                <%= errors.color.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <div class="talle">
                        <label for="size">Talle: </label>
                        <select class="size" name="size" id="size"  class="<%= locals.errors && errors.size ? 'is-invalid' : null %>">
                            <option value=""></option>
                            <% for (let i=0 ; i< 11 ; i++) { %>
                                <option value="<%= 1+i %>"><%= 35+i %></option>
                            <% } %>
                        </select>
                        <% if (locals.errors && errors.size) { %>
                            <div class="text-danger">
                                <%= errors.size.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <div class="cantidad">
                        <label for="quantity">Cantidad: </label>
                        <select name="quantity" id="quantity"  class="<%= locals.errors && errors.quantity ? 'is-invalid' : null %>">
                            <% for (let i=0 ; i<30 ; i++) { %>
                                <option value="<%= i+1 %>"><%= i+1 %></option>
                            <% } %>
                        </select>
                        <% if (locals.errors && errors.quantity) { %>
                            <div class="text-danger">
                                <%= errors.quantity.msg %> 
                            </div>
                        <% } %>
                    </div>
                    
                </div>
                <div class="boton-crear">
                    <button type="submit">Crear Producto</button>
                </div>
                <div class="boton-borrar">
                    <button type="reset">Borrar</button>
                </div>
            </div>
        </form>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>