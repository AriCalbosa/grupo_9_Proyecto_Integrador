<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <link href="/css/main/styles-home.css" rel="stylesheet">
        <title>Bienvenidxs a MiZapatilla!</title>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <section class="banner">
            <img src="/images/banner/banner02.png" alt="Banner de ofertas">
        </section>
        <main>
            <section class="casual">
                <h3>Casual</h3>
                <div class="productos">
                    <% for ( i = 0; i < productsCasual.length; i++) { %>
                        <article>
                            <a href="/productos/<%= productsCasual[i].category %>/<%= productsCasual[i].id %>">
                                <img src = "/images/adidas/<%= productsCasual[i].image %>" alt="<%=productsCasual[i].product_name %>" class="product_img">
                                <div class="producto">
                                    <i class="fas fa-truck"></i>
                                    <p class = "precio">$ <%=productsCasual[i].price %></p>
                                    <% if (productsCasual[i].discount != 0) { %>
                                    <p class = "descuento">%<%=productsCasual[i].discount %> OFF</p>
                                    <% } %>
                                    <h4 class = "descripcion"><%=productsCasual[i].product_name %></h4>
                                </div>
                            </a>
                        </article>
                    <% } %>
                    <a class="mas-productos" href="/productos/casual"><i class="fas fa-plus"></i></a>
                </div>
            </section>
            <section class="futbol">
                <h3>Futbol</h3>
                <div class="productos">
                    <% for ( i = 0; i < productsFutbol.length; i++) { %>
                        <article>
                            <a href="/productos/<%= productsFutbol[i].category %>/<%= productsFutbol[i].id %>">
