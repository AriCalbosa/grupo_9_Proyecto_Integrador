                                    <i class="fas fa-truck"></i>
                                    <p class = "precio">$ <%=productosRunning[i].precio %></p>
                                    <% if (productosRunning[i].descuento != 0) { %>
                                    <p class = "descuento">%<%=productosRunning[i].descuento %> OFF</p>
                                    <% } %>
                                    <h4 class = "descripcion"><%=productosRunning[i].nombre %></h4>
                                </div>
                            </a>
                        </article>
                    <% } %>
                    <a class="mas-productos" href="/productos/running"><i class="fas fa-plus"></i></a>
                </div>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>