                                    <% if (productosFutbol[i].descuento != 0) { %>
                                    <p class = "descuento">%<%=productosFutbol[i].descuento %> OFF</p>
                                    <% } %>
                                    <h4 class = "descripcion"><%=productosFutbol[i].nombre %></h4>
                                </div>
                            </a>
                        </article>
                    <% } %>
                    <a class="mas-productos" href="/productos/futbol"><i class="fas fa-plus"></i></a>
                </div>
            </section>
            <section class="running">
                <h3>Running</h3>
                <div class="productos">
                    <% for ( i = 0; i < 4; i++) { %>
                        <article>
                            <a href="/productos/<%= productosRunning[i].categoria %>/<%= productosRunning[i].id %>">
