                                        <% } %>
                                        <h4 class = "descripcion"><%=productos[i].nombre %></h4>
                                    </div>
                                </a>
                                </article>
                        <% } %>
                    <% } %>
                    <a class="mas-productos" href="/productos/futbol"><i class="fas fa-plus"></i></a>
                </div>
            </section>
