<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <link href="/css/main/styles-home.css" rel="stylesheet">
        <title>Bienvenidxs a MiZapatilla!</title>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <section class="banner">
            <img src="images/banner/banner02.png" alt="Banner de ofertas">
        </section>
        <main>
            <section class="casual">
                <h3>Casual</h3>
                <div class="productos">
                    <% for ( i = 0; i < productos.length; i++) { %>
                        <% if ( productos[i].categoria == 'casual' ) { %>
                            <article>
                                <a href="/productos/<%= productos[i].categoria %>/<%= productos[i].id %>">
                                    <img src = "images/adidas/<%= productos[i].imagen01 %>" alt="<%=productos[i].nombre %>" class="product_img">
                                    <div class="producto">
                                        <i class="fas fa-truck"></i>
                                        <p class = "precio">$ <%=productos[i].precio %></p>
                                        <% if (productos[i].descuento != 0) { %>
                                        <p class = "descuento">%<%=productos[i].descuento %> OFF</p>
                                        <% } %>
                                        <h4 class = "descripcion"><%=productos[i].nombre %></h4>
                                    </div>
                                </a>
                                </article>
                        <% } %>
                    <% } %>
                    <a class="mas-productos" href="/productos/casual"><i class="fas fa-plus"></i></a>
                </div>
            </section>
            <section class="futbol">
